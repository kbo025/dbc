// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DATABASE_URL")
}

model Person {
  id           Int                  @id @default(autoincrement())
  cpf          String               @db.VarChar(12) @unique
  name         String               @db.VarChar(128)
  email        String               @db.VarChar(128) @unique
  phone        String               @db.VarChar(128)

  createdAt    DateTime?            @default(now()) @db.Date
  updatedAt    DateTime?            @db.Date
  deletedAt    DateTime?            @db.Date
  active       Boolean?             @default(true)

  addresses   Address[]

  @@map("people")
}

model Address {
  id           Int                  @id @default(autoincrement())
  logradouro   String               @db.VarChar(128)
  number       Int
  district     String               @db.VarChar(128) @unique
  city         String               @db.VarChar(128) @unique
  state        String               @db.VarChar(2) @unique

  createdAt    DateTime?            @default(now()) @db.Date
  updatedAt    DateTime?            @db.Date
  deletedAt    DateTime?            @db.Date
  active       Boolean?             @default(true)

  person       Person               @relation(fields: [personId], references: [id])
  personId     Int                  @map("person_id")

  @@map("addresses")
}
